{
    "name": "destroyer2",
    "description": "real-time multiplayer battleship game",
    "version": "5.0.0",
    "type": "module",
    "private": true,
    "scripts": {
        "start": "NODE_ENV=production node ./bin/www",
        "debug": "NODE_ENV=development node ./bin/www",
        "dev": "npm run debug",
        "docs:dev": "cd docs/ && npm run docs:dev",
        "docs:build": "cd docs/ && npm run docs:build",
        "format": "prettier --check .",
        "format-write": "npx prettier --write ."
    },
    "imports": {
        "#root/*": "./*.mjs",
        "#db/*": "./db/*.mjs",
        "#helpers/*": "./helpers/*.mjs",
        "#models/*": "./models/*.mjs",
        "#frontend-server/*": "./frontend-server/*.mjs",
        "#game-server/*": "./game-server/*.mjs"
    },
    "dependencies": {
        "@redis/client": "^1.5.6",
        "dotenv": "^16.0.3",
        "express": "~4.18.2",
        "joi": "^17.8.3",
        "jsonwebtoken": "^9.0.0",
        "morgan": "~1.10.0",
        "winston": "^3.8.2",
        "ws": "^8.12.1"
    },
    "devDependencies": {
        "prettier": "2.8.4"
    }
}
